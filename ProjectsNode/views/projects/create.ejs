<% include ../partials/navbaruser %>
<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          Create Project
        </h1>
        <% include ../partials/messages %>
              
        <form action="/project/create" method="POST" id="projectform">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Project Name"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea form="projectform" placeholder="Project Description" id="description" name="description"
              class="form-control" value="<%= typeof description != 'undefined' ? description : '' %>"></textarea>
          </div>
          <div class="form-group">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" class="form-control" placeholder="Project's Price"
              value="<%= typeof price != 'undefined' ? price : '' %>" />
          </div>
          <div class="form-group">
            <label for="done_jobs">Done jobs</label>
            <textarea form="projectform" placeholder="Done Jobs" id="done_jobs" name="done_jobs" class="form-control"
              value="<%= typeof done_jobs != 'undefined' ? done_jobs : '' %>"></textarea>
          </div>
          <select form = "projectform" multiple = "true" class="form-control" id="workers" name="workers">
              <% users.forEach(function(user) { %>
                <option value="<%= user.id %>"><%= user.name %></option>
                <% }); %>
          </select>
          <div class="form-group">
            <label for="start_date">Start date</label>
            <input type="date" id="start_date" name="start_date" class="form-control" placeholder="Start date"
              value="<%= typeof start_date != 'undefined' ? start_date : '' %>" />
          </div>
          <div class="form-group">
            <label for="end_date">End date</label>
            <input type="date" id="end_date" name="end_date" class="form-control" placeholder="End date"
              value="<%= typeof end_date != 'undefined' ? end_date : '' %>" />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Create
          </button>
        </form>
      </div>
    </div>
  </div>
</div>